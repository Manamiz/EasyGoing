        var tutoData;
        var current = 0;

        var nextTutorial = function() {
            
            console.log(tutoData);
            
            var d = tutoData[current];

            $("div[role=tutorial][id = " + d.div + "]").html(
                "<img src=/img/tuto.png /> " + d.text + "<a href='#' onClick='nextTutorial()'>   Next</a>"
            ).fadeIn();

            $("div[role=tutorial][id != " + d.div + "]").fadeOut(); 

            current = (current + 1) % tutoData.length;

        };

        function loadTutorial(tuto) {

                Tutorial(tuto, function(data) {

                $("div[role=tutorial]").each(function() {
                    var div = $(this);
                    var position = div.position();

                    div.css({
                        position: 'absolute',
                        top: position.top,
                        left: position.left,
                        width: position.width,
                        height: position.heigth,
                        paddingLeft: 25,
                        paddingRight: 25,
                        paddingBottom: 10,
                        paddingTop: 10,
                        borderRadius: 10,
                        background: "yellow",
                        borderStyle: "solid"
                    });

                });

                tutoData = data;
                nextTutorial();
            });
        };

    </script>
    
