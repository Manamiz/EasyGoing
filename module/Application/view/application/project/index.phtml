   // Return an HTML code rendering an event div, using for code factoring.
   function eventRendering($type, $event)
   {
      $eventContent =
         '<div class="eventElem"' . (!empty($event->details) ? ('onclick="expandEventDetails(' . $event->id . ', \'' . $type . '\');"') : '') . ' name="eventIn' . $type . '">
